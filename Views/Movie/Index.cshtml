@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        width: 80%;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }
</style>

<h2>Index</h2>
@Html.ActionLink("New", "New", "Movie", null, new { @class="btn btn-primary"})

<table>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
</table>
