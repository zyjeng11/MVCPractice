@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        width: 80%;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }
</style>

<h2>Index</h2>

<table>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <th>@movie.Name</th>
            <th>@movie.Genre.Name</th>
        </tr>
    }
</table>
